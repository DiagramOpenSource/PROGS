|FICHEROS;
     reconfac #0;
     facemp #1;      || empresas facturacion
|FIN;

|VARIABLES;
     alfa1 = "";
     alfa2 = "";
     alfa3 = "";
     alfa4 = "";
     nume1 = 0;
     nume2 = 0;
     nume3 = 0;
     nume4 = 0;
     fech1 = @;
     fech2 = @;
     fech3 = @;
     fech4 = @;
     primera = 0;
     cuarenta = " ";
     putada = "";
     factu = "";
     aOrigen  = "";
     aDestino = "";
     aAplicas = "";
     aRen02   = "";
     aRen03   = "";
|FIN;

|PROCESO Path;  |TIPO 0;
     |SI FSalida = 9;
         |DBASS alfa1;
         alfa1 = alfa1 + "facges/fich/";
         #0#0 = alfa1;
         |PINTA #0#0;
         |ERROR;
     |FINSI;

     putada = #0#0;  |QBT putada;
     |SI putada = "*";
         |CAMPO_MODIFICA #0#01, 1, "N";
         |CAMPO_MODIFICA #0#13, 1, "S";
         |CAMPO_MODIFICA #0#14, 1, "S";
         #0#1 = 0;  |PINTA #0#1;
     |SINO;
         |CAMPO_MODIFICA #0#01, 1, "S";
         |CAMPO_MODIFICA #0#13, 1, "N";
         |CAMPO_MODIFICA #0#14, 1, "N";
         #0#13 = 0;  |PINTA #0#13;
         #0#14 = 0;  |PINTA #0#14;
     |FINSI;
|FPRC;

|PROCESO LeeEmpre; |TIPO 0;
     |SI putada = "*";  |ACABA;  |FINSI;

     alfa1 = #0#0;   |QBF alfa1;
     |PATH_DAT #1 alfa1;
     |ABRE #1;
     #1#0 = #0#1;
     |LEE 001#1=;
     |SI FSalida ! 0;
         |MENAV "    ATENCION!!! Empresa inexistente en Facturacion ...";
         |ERROR;
         |DDEFECTO #1;
     |FINSI;
     |ATRI I;
     |PINTA 1446, #1#1;
     |ATRI 0;
     |CIERRA #1;
|FPRC;

|PROCESO TraeEjerAnt;
     |DBASS aAplicas;   |QBT aAplicas;
     aRen02 = aAplicas + "agiren02/fich/";
     |DFICE aRen03;     |QBT aRen03;

    aOrigen  = aRen02 + "reconfac.dat";
    aDestino = aRen03 + "reconfac.dat";
    |COPIA_FICHERO aOrigen, aDestino;

    aOrigen  = aRen02 + "recontar.dat";
    aDestino = aRen03 + "recontar.dat";
    |COPIA_FICHERO aOrigen, aDestino;

    aOrigen  = aRen02 + "reconcod.dat";
    aDestino = aRen03 + "reconcod.dat";
    |COPIA_FICHERO aOrigen, aDestino;

    aOrigen  = aRen02 + "reconcep.dat";
    aDestino = aRen03 + "reconcep.dat";
    |COPIA_FICHERO aOrigen, aDestino;

    aOrigen  = aRen02 + "reempres.dat";
    aDestino = aRen03 + "reempres.dat";
    |COPIA_FICHERO aOrigen, aDestino;
|FPRC;

|PROGRAMA;
     cuarenta = cuarenta * 40;
     |CLS;
     |CABEZA "Control Pase";
     |ABRE #0;
     |LEE 001#0p;
     |SI FSalida ! 0;
         |HAZ TraeEjerAnt;
     |FINSI;
     |CIERRA #0;

     |ABRE #0;
     |LEE 001#0p;
     |SI FSalida ! 0;
         primera = 1;
        |DDEFECTO #0;
        |GRABA 020#0b;
     |FINSI;

     |PINPA #0#0;
     |PINDA #0#0;
     putada = #0#0;  |QBT putada;
     |SI primera = 0;|Y putada ! "*";
         |HAZ LeeEmpre;
     |FINSI;
     |ENDATOS #1#0;
     |SI FSalida = 0;  |GRABA 020#0a;  |FINSI;
     |LIBERA #0;
     |CIERRA #0;
|FPRO;
