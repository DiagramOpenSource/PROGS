|VARIABLES;
 &nSwQueO  = 0;
 nInkey    = 0;
 aAlfa1    = "";
 aAlfa2    = "";
 nNumero   = 0;
 nNume1    = 0;
 nNume2    = 0;
 aDirBase  = "";
 &aPathPlan = "";
 nEstado   = 0;
 aMas      = "";
 aDef      = "";
 fFecha    = @;
 &ndig3 = 0;
 &ndig4 = 0;
 &ndig5 = 0;
 &ndig6 = 0;
 &ndig7 = 0;
 &ndig8 = 0;
 &ndig9 = 0;
|FIN;

