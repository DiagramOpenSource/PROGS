|FICHEROS;
     rem01058;
     rew00758;
|FIN;

|VARIABLES;
      nCampo           = 0;
      nRango           = 0;
      nNumCampos       = 0;
      nGrid            = 0;

      aAlfa            = "";
      aQueQuiero       = "";
      aNumCampos       = "";
      aEsc1            = "";
      aEsc2            = "";
      aRetu            = "";
      aTecla           = "";

     &enEmpresa        = 0;
     &enComplementaria = 0;
     &eaContri         = "";
|FIN;

|PROCESO PintaDatosPantalla;
     |DDEFECTO #rew00758;
     |PARA nCampo = 0;  |SI nCampo [ nNumCampos;  |HACIENDO nCampo = nCampo + 1;
           #rew00758#nCampo# = #rem01058#nCampo#;

           |C_V #rew00758#nCampo#, 0, aAlfa;
           |SI aAlfa = "S";  |PINTA #rew00758#nCampo#;  |FINSI;
     |SIGUE;
|FPRC;

|PROCESO Evento1058;
     |SI FSalida = 1;  |O FSalida = 2;
         |LEE 000#rem01058.=;

         |HAZ PintaDatosPantalla;
     |FINSI;
|FPRC;

|PROCESO Baja1058;
     #rem01058#0 = enEmpresa;
     #rem01058#1 = enComplementaria;
     #rem01058#2 = eaContri;
     #rem01058#3 = 1;
|FPRC;

|PROCESO Alta1058;
     #rem01058#0 = enEmpresa;
     #rem01058#1 = enComplementaria;
     #rem01058#2 = eaContri;
     #rem01058#3 = 999;
|FPRC;

|PROGRAMA;
     aQueQuiero  = "|NC";
     aNumCampos  = #rem01058#aQueQuiero#;
     nNumCampos  = aNumCampos;
     nNumCampos  = nNumCampos - 1;
     nRango      = 4 + 8 + 16 + 32 + 128;

     |PINPA #0#rew00758;

     |DDEFECTO #rem01058;
     |HAZ PintaDatosPantalla;

     |ABRET #rem01058;

     |LINEAL_SIMPLE #1#rem01058, nRango, 0602, 1398, Baja1058, Alta1058, Evento1058;
     nGrid = FSalida;

     aEsc1  = &255 + "806";
     aEsc2  = &255 + "807";
     aRetu  = &255 + "802";
     |PARA; |SI;  |HACIENDO;
          FSalida = "::{{001}}Salir," + nGrid;
          |LEETECLA aTecla;
          |SI aTecla = aEsc1; |SAL;  |FINSI;
          |SI aTecla = aEsc2; |SAL;  |FINSI;
          |SI aTecla = aRetu; |SAL;  |FINSI;
     |SIGUE;

     |CIERRAT #rem01058;
|FPRO;
