|DEFBUCLE isom0021C;
     #isom0021#1;
     ;
     enEmpresa, enAnyo, 01;
     enEmpresa, enAnyo, 99;
     ;
     NULL, isom0021C;
|FIN;

|PROGRAMA;
     |HAZ SaltaError;

     |SI enAnyo [ 2011;  aCasilla = "813";  |FINSI;
     |SI enAnyo ] 2012;  aCasilla = "096";  |FINSI;

     |ABRE #isom0011;
     |SELECT #2#isom0011;
     #isom0011#0 = enEmpresa;
     #isom0011#1 = enAnyo;
     #isom0011#4 = aCasilla;

     |LEE 000#isom0011.=;
     |SI FSalida ! 0;  |DDEFECTO #isom0011;  |FINSI;
     |CIERRA #isom0011;

     |SI #isom0011#5 [ 50000;
         aAlfa = "0000La casilla " + aCasilla + " de las deducciones no supera los 50.000 Euros";
         |MENAV aAlfa;

         |BUCLE isom0021B;

         |SI enSaltaError = 0;  |ACABA;  |FINSI;
     |FINSI;

     aAlfa = "";
     |SI enModoConsulta = 1;
         aAlfa = "(MODO CONSULTA)   ";
     |FINSI;

     |SI enAnyo [ 2011;
         aAlfa = aAlfa + "Deducci¢n por empresas exportadoras";
     |FINSI;

     |SI enAnyo ] 2012;
         aAlfa = aAlfa + "Deducci¢n por innovaci¢n tecnol¢gica";
     |FINSI;

     |VENTANA 0501, 2099, -1, 16, aAlfa;
     nVentana = FSalida;

     aVent1 = -1;
     aVent2 = -1;
     aVent3 = 0;
     aVent4 = nVentana;
     aVent5 = "MODAL";
     |ESPECIFICA "ESTADO_VENTANA", aVent;

     |ABRE #isom0021;

     |SI enModoConsulta = 0;
         nRango = 1 + 2 + 4 + 8 + 16 + 32;
     |SINO;
         nRango = 4 + 8 + 16 + 32;
     |FINSI;

     |LINEAL_SIMPLE #1#isom0021, nRango, 0602, 1898, Baja121, Alta121, NULL;
     nGrid = FSalida;

     |PULSATECLA;
     aEsc1  = &255 + "806";
     aEsc2  = &255 + "807";
     aRetu  = &255 + "802";
     |PARA; |SI;  |HACIENDO;
         FSalida = "::{{001}}Salir," + nGrid;
         |LEETECLA aTecla;
         |SI aTecla = aEsc1; |SAL;  |FINSI;
         |SI aTecla = aEsc2; |SAL;  |FINSI;
         |SI aTecla = aRetu; |SAL;  |FINSI;
     |SIGUE;

