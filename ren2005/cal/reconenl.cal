|PROCESO GraLinMin;
     #3#00 = #0#3;          || tipo
     #3#01 = #4#0;          || codigo
     #3#02 = linea;         || linea
     #3#03 = fecha;         || fecha
     #3#04 = seccion;       || seccion
     #3#05 = concepto;      || concepto
     #3#06 = descri1;       || descrip. abreviada
     #3#07 = descri2;       || descrip. 1
     #3#08 = descri3;       || descrip. 2
     #3#09 = descri4;       || descrip. 3
     #3#10 = tipo;          || tipo
     #3#11 = 1;             || unidades
     #3#12 = ptas;          || ptas.
     #3#13 = #3#11 * #3#12; || importe
     #3#14 = uni_glo;       || unitario/global
     #3#15 = fecha;         || fecha entera.
     |GRABA 020#3n;

     |SI #3#10 = "H";  honorar = honorar + #3#13;  |FINSI;
     |SI #3#10 = "S";  suplido = suplido + #3#13;  |FINSI;
|FPRC;

|PROCESO Calcula1;
     |SI #21#2 = "S";     || honorarios
         linea    = linea + 1;
         seccion  = #21#3;
         concepto = #21#4;
         |HAZ Conceptos;
         |HAZ GraLinMin;
     |FINSI;

     |SI linea ! 0;
         descuen = (honorar % #4#23) ! 0;
         bimponi = honorar-descuen;
         tot_iva = (bimponi % iva) ! 0;
         tot_fac = bimponi + suplido + tot_iva;
         |SI #4#17 = "S";
             tot_ret = (bimponi % reten) ! 0;
         |SINO;
             tot_ret = 0;
         |FINSI;
         tot_pag = tot_fac - tot_ret;
     |FINSI;
|FPRC;

|PROCESO Calcula2;
     |SI #21#6 = "S";     || suplidos
         seccion  = #21#7;
         concepto = #21#8;
         |HAZ Conceptos;

         ptas = 0;
         |SI #5#5 = "100";  |O #5#5 = "101";
             |SI #21#09 = "S";
                 |SI #5#8 = "N";
                     ptas = #5#3;
                 |SINO;
                     ptas = #5#3 % 60;
                     |SI #21#10 = "S";  ptas = ptas + (#5#3 % 40);  |FINSI;
                 |FINSI;
             |FINSI;
         |SINO;
             |SI #21#11 = "S";
                 ptas = #5#3;
             |FINSI;
         |FINSI;

         |SI ptas ! 0;
             linea    = linea + 1;
             |HAZ GraLinMin;
         |FINSI;
     |FINSI;

     |SI linea ! 0;
         descuen = (honorar % #4#23) ! 0;
         bimponi = honorar-descuen;
         tot_iva = (bimponi % iva) ! 0;
         tot_fac = bimponi + suplido + tot_iva;
         |SI #4#17 = "S";
             tot_ret = (bimponi % reten) ! 0;
         |SINO;
             tot_ret = 0;
         |FINSI;
         tot_pag = tot_fac - tot_ret;
     |FINSI;
|FPRC;

