     #2#22 = bimponi;     || base imponible
     #2#23 = tot_iva;     || total iva
     #2#24 = tot_fac;     || total factura
     #2#25 = tot_ret;     || total retencion
     #2#26 = tot_pag;     || total a pagar
     #2#27 = serie;       || serie
     #2#28 = factura;     || factura
