|PROCESO resta_anyos;
    dfec = dfec1; |HAZ desglosa; tany1 = dany; tmes1 = dmes; tdia1 = ddia;
    dfec = dfec2; |HAZ desglosa; tany2 = dany; tmes2 = dmes; tdia2 = ddia;

    anyos = tany2 - tany1;

|SI sw_soloanyo = 0;               || para tener en cuenta o no el mes y
    |SI tmes2 ] tmes1;             ||/el dia en la resta
        |SI tmes2 = tmes1;
            |SI tdia2 < tdia1;
                    anyos = anyos - 1;
            |FINSI;
        |FINSI;
    |SINO;
            anyos = anyos - 1;
    |FINSI;
|FINSI;
