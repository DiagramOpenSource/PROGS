|PROCESO Fantasma; |TIPO 0;
     |SI FSalida = 0; |O FSalida = 3;
          |VARIABLES;
               nCont = 0;
               nCalc = 0;
               aAlfa = "";
          |FIN;

          aAlfa = "|NC"; aAlfa = #nomfan01#aAlfa#;
          nCalc = aAlfa; nCalc = nCalc - 1;
          |PARA nCont = 0; |SI nCont [ nCalc; |HACIENDO nCont = nCont + 1;
               #nomfan01#nCont# = #nomconst#nCont#;
          |SIGUE;

          |CABEZA "CONSTANTES";
          |PINPA #0#nomfan01; |PINDA #0#nomfan01;
          |SI #nomconst#0 [ 499; |O swActiva ! 0;
               |ENDATOS #1#nomfan01;
               |SI FSalida = 0;
                    aAlfa = "|NC"; aAlfa = #nomfan01#aAlfa#;
                    nCalc = aAlfa; nCalc = nCalc - 1;
                    |PARA nCont = 0; |SI nCont [ nCalc; |HACIENDO nCont = nCont + 1;
                         #nomconst#nCont# = #nomfan01#nCont#;
                    |SIGUE;
                    |GRABA 020#nomconst.a;
               |FINSI;
          |SINO;
               nPan = 1;
               |PARA; |SI; |HACIENDO;
                    |HAZ AvisoC;
                    |PAUSA;
                    |SI FSalida = 4;
                         nPan = nPan - 1;
                    |FINSI;
                    |SI FSalida = 5;
                         nPan = nPan + 1;
                    |FINSI;
                    |SI FSalida = 1;
                         |PINPA #0#nomfan01; |PINDA #0#nomfan01;
                         |SAL;
                    |FINSI;
                    |SI nPan [ 1;
                         nPan = 1;
                         |PINPA #0#nomfan01; |PINDA #0#nomfan01;
                    |FINSI;
                    |SI nPan = 2;
                         |PINPA #1#nomfan01; |PINDA #1#nomfan01;
                    |FINSI;
                    |SI nPan ] 3;
                         nPan = 3;
                         |PINPA #2#nomfan01; |PINDA #2#nomfan01;
                    |FINSI;
               |SIGUE;
          |FINSI;
     |FINSI;
     swYahepreg = 0;     || inicializo variable para CONFI posterior
|FPRC;

