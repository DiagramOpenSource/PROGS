|PROCESO copia;
     |DDEF aDef;
     aDef = aDef + "nomconst";
     |CARGA_DEF aDef, copconst@;
     |SI FSalida = 0;
          |ABRE #200;
          #200#0 = nConsCop;
          #200#79 = "31.12.9999";
          |LEE 000#200];
          |SI FSalida = 0;
               |LEE 000#200a;
          |SINO;
               |LEE 000#200u;
          |FINSI;
          |SI FSalida = 0; |Y #200#0 = nConsCop;
               || SI #200#79 = #0#79;     || ASI ME ASEGURO DE QUE LEO LA
                    || LEE 000#200a;      || ULTIMA, Y NO UNA QUE SE ESTA CREANDO
               || FINSI;
               |PARA nCampo = 6; |SI nCampo [ 76; |HACIENDO nCampo = nCampo + 1;
                    #nomfan01#nCampo# = #200nCampo;
                    |PINTA #nomfan01#nCampo#;
               |SIGUE;
               |PARA nCampo = 82; |SI nCampo [ 91; |HACIENDO nCampo = nCampo + 1;
                    |SI nCampo ! 88;
                         #nomfan01#nCampo# = #200nCampo;
                         |PINTA #nomfan01#nCampo#;
                    |FINSI;
               |SIGUE;
          |SINO;
               |MENAV "    ATENCION. Constante a copiar no encontrada";
          |FINSI;
          |CIERRA #200;
     |FINSI;
     |DESCARGA_DEF #copconst@;
|FPRC;

