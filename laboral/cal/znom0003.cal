     |PINTA 1929, aAlfa;
     aAlfa = #nomhicca#2; |QBF aAlfa; aAlfa = ("00" + aAlfa) % -102;
     aAlfa = "Mes " + aAlfa;
     |PINTA 2037, aAlfa;

     |SI #labtraba#42 ! "X";
