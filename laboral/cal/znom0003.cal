     |FINSI;
     |SI #nomhicca#8 ! 30;         || solo los que tengan que ajustar
          |ACABA;                  || es decir alta el mes completo
     |FINSI;

     swSigue = 0;
     |PARA nCampo = 27; |SI nCampo [ 30; |HACIENDO nCampo = nCampo + 1;
          |SI #nomhicca#nCampo# = "E"; |O #nomhicca#nCampo# = "A";
