|FICHEROS;
     nomgirm2 #0;
     nomgirma #1;
|FIN;

|VARIABLES;
     FEstado = 0;
     nModo = 0;
|FIN;

|PROCESO Bloquea; |TIPO 7;
     nModo = (FEntrada / 100) ! 0;
     |SI nModo ! 4;
          |MENAV "    Solo disponible el modo consulta";
          |PTEC 806;
     |FINSI;
|FPRC;

|PROCESO nomgirma;
     #nomgirm2#0 = #nomgirma#0;
     |LEE 101#nomgirm2.=;
     FEstado = FSalida;
     #nomgirm2#1 = #nomgirma#1;
     #nomgirm2#2 = #nomgirma#2;
     |SI FSalida = 0;
          |GRABA 020#nomgirm2.a;
     |SINO;
          |GRABA 020#nomgirm2.n;
     |FINSI;
     |LIBERA #nomgirm2;
|FPRC;

|DEFBUCLE nomgirma;
     #nomgirma#1;
     ;
     001;
     999;
     ;
     NULL, nomgirma;
|FIN;

|PROCESO Actualiza; |TIPO 8;
     |ABRE #nomgirm2;
     |BUCLE nomgirma;
     |CIERRA #nomgirm2;
|FPRC;
