|PROCESO Ayuda06; |TIPO 7;
     ||            2         3         4         5         6         7
     ||            2345678901234567890123456789012345678901234567890123
     |PINTA 0822, "Introduzca a qué unidades se  refiere el campo ante-";
     |PINTA 0922, "rior: (D) para días, (M) para meses o  (%) si se re-";
     |PINTA 1022, "fiere a un porcentaje.                              ";
|FPRC;

|PROCESO Ayuda07; |TIPO 7;
     |SI #0#6 = "%";
          ||            2         3         4         5         6         7
          ||            2345678901234567890123456789012345678901234567890123
          |PINTA 0822, "Introduzca 00 para pagar siempre el porcentaje indi-";
          |PINTA 0922, "cado (respecto a TODO el tiempo trabajado) o bien un"
          |PINTA 1022, "número máximo de meses para aplicarlo.              ";
     |SINO;
          ||            2         3         4         5         6         7
          ||            2345678901234567890123456789012345678901234567890123
          |PINTA 0822, "Introduzca la periodicidad con que se paga la indem-";
          |PINTA 0922, "nización según el tiempo trabajado (por cada X meses";
          |PINTA 1022, "trabajados) o 00 si no depende del tiempo trabajado.";
     |FINSI;
|FPRC;

|PROCESO Ayuda08; |TIPO 7;
     |SI #0#6 = "%";
          ||            2         3         4         5         6         7
          ||            2345678901234567890123456789012345678901234567890123
          |PINTA 0822, "Introduzca (D) para calcular la indemnizac. según el";
          |PINTA 0922, "importe devengado durante la vigencia del contrato o";
          |PINTA 1022, "(P) para calcularlo según valor actual del convenio ";
          |SI #0#8 ! "D"; |Y #0#8 ! "P";
               #0#8 = "D";
               |PINTA #0#8;
          |FINSI;
     |SINO;
          ||            2         3         4         5         6         7
          ||            2345678901234567890123456789012345678901234567890123
          |PINTA 0822, "Introduzca (N) para  calcular la  indemnización  te-";
          |PINTA 0922, "niendo en cuenta sólo periodos  completos o (S) para";
          |PINTA 1022, "incluir además las fracciones del periodo indicado. ";
          |SI #0#8 ! "N"; |Y #0#8 ! "S";
               #0#8 = "S";
               |PINTA #0#8;
          |FINSI;
     |FINSI;
|FPRC;

|PROCESO Valida08;
     |SI #0#6 = "%";
          |SI #0#8 ! "D"; |Y #0#8 ! "P";
               |ERROR;
          |FINSI;
     |SINO;
          |SI #0#8 ! "S"; |Y #0#8 ! "N";
               |ERROR;
          |FINSI;
     |FINSI;
|FPRC;

|PROCESO CompCon;
     |SI #0Campo < 100; |Y #0Campo ! 0;
          |MENAV "    Rango de conceptos [100-999]";
          |ERROR;
     |FINSI;
|FPRC;

|PROCESO Conceptos;
     |SI #nomfinli#9 = 0;
          |PARA nCampo = 10; |SI nCampo [ 14; |HACIENDO nCampo = nCampo + 1;
               |CAMPO_MODIFICA #nomfinli#nCampo#, 1, "N";
               #nomfinli#nCampo# = 0;
               |PINTA #nomfinli#nCampo#;
          |SIGUE;
     |SINO;
          |PARA nCampo = 10; |SI nCampo [ 14; |HACIENDO nCampo = nCampo + 1;
               |CAMPO_MODIFICA #nomfinli#nCampo#, 1, "S";
          |SIGUE;
     |FINSI;
|FPRC;
