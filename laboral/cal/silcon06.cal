|PROCESO borrando1;
|BORRA 020#1a;
|LIBERA #1;
|FPRC;

|DEFBUCLE borrando;
 #1#1;
 ;
 #0#0,     1, " ";
 #0#0, 99999, "z";
 be;
 NULL, borrando1;
|FIN;

|PROCESO min;
    #1#0 = #0#0;
    #1#1 = 1;
    #1#2 = " ";
|FPRC;

|PROCESO max;
    #1#0 = #0#0;
    #1#1 = 99999;
    #1#2 = "z";
|FPRC;

|PROCESO tipo30; |TIPO 30;
    modo = (FEntrada / 100) ! 0;
|SI modo = 2;
    |ENTLINEAL #1#1, 2, 3, 22, 1, min, max;
|FINSI;
|FPRC;

|PROCESO tipo2; |TIPO 2;
    modo = (FEntrada / 100) ! 0;
|SI modo = 3;
    |CONFI "    NBorrado del Registro de esta Empresa (S/N): ";
    |SI FSalida = 0;
        |BUCLE borrando;
    |SINO;
        |ERROR;
    |FINSI;
|FINSI;
|FPRC;

|PROCESO tipo13; |TIPO 13;
    modo = (FEntrada / 100) ! 0;
|SI modo = 4;
    |HAZ pinta_empresa;
    |ENTLINEAL #1#1, 2, 4, 22, 1, min, max;
|FINSI;
|FPRC;

|PROCESO pinta_empresa; |TIPO 0;
     |PINTA #0#0;
     |PINTA #0#2;
     |PINTA #0#3;
     |PINTA #0#4;
     |PINTA #0#5;
     |PINTA #0#6;
     |PINTA #0#7;
     |ABRE #10;
          #10#0 = #0#0;
     |LEE 000#10=;
     |ATRI I;
     |PINTA 0730, #10#2;
     |ATRI 0;
     |CIERRA #10;
     |HAZ Autorizacion;
|FPRC;
