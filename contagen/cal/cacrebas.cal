|FICHEROS;
   cacrebas #0;
|FIN;

|VARIABLES;
   nAlfa1    = "";
   ficher    = "";
   basico    = "";
   dir_fich1 = "";
   dir_empr  = "";
   temporal1 = "";
   temporal2 = "";
|FIN;

|INCLUYE dscont_i;

|CALCULO creacion; |TIPO 3;

   |DBASE dir_fich1;
   dir_fich1 = dir_fich1 + "fich/";
   |DFICE dir_empr;

   |SI #0#0 = "S";
       ficher = dir_empr  + "cacuenta";       || cuentas
       basico = dir_fich1 + "plancont";
       |SI enEjercicio ] 2008; basico = dir_fich1 + "planco08"; |FINSI;
       |HAZ copia;
   |FINSI;
   |SI #0#1 = "S";
       ficher = dir_empr  + "casieaca";
       basico = dir_fich1 + "predecab";       || predef. cabs.
       |HAZ copia;
       ficher = dir_empr  + "casieali";       || predef. lins.
       basico = dir_fich1 + "predelin";
       |HAZ copia;
       ficher = dir_empr  + "casiegru";       || grupos
       basico = dir_fich1 + "predegru";
       |HAZ copia;
       ficher = dir_empr  + "casiesub";       || subgrupos
       basico = dir_fich1 + "predesub";
       |HAZ copia;
   |FINSI;
   |SI #0#2 = "S";
       ficher = dir_empr  + "cadeflal";       || conceptos  Salariales
       basico = dir_fich1 + "prdeflal";
       |HAZ copia;
   |FINSI;
   |SI #0#3 = "S";
       ficher = dir_empr  + "camauto0";
       basico = dir_fich1 + "prmauto0";       || astos Fijos Esp. cabs.
       |HAZ copia;
       ficher = dir_empr  + "camauto1";       || astos Fijos Esp. lins.
       basico = dir_fich1 + "prmauto1";
       |HAZ copia;

       ficher = dir_empr  + "camautoc";       || astos fijos cabs.
       basico = dir_fich1 + "prmautoc";
       |HAZ copia;
       ficher = dir_empr  + "camautol";       || astos fijos lins.
       basico = dir_fich1 + "prmautol";
       |HAZ copia;

       ficher = dir_empr  + "camautti";       || tipos astos fijos
       basico = dir_fich1 + "prmautti";
       |HAZ copia;
   |FINSI;

   |SI #0#4 = "S";
       ficher = dir_empr  + "caformul";
       basico = dir_fich1 + "prformul";       || Formulas Ratios
       |HAZ copia;
       ficher = dir_empr  + "caratios";       || astos Fijos Esp. lins.
       basico = dir_fich1 + "prratios";
       |HAZ copia;
   |FINSI;
|FCAL;

|PROCESO  copia;
   nAlfa1 = " Copiando ... " + ficher;
   |ATRI R;
   |PINTA 2305, nAlfa1
   |ATRI 0;
   temporal1 = ficher + ".ixx";
   temporal2 = basico + ".ixx";
   |COPIA_FICHERO temporal1,temporal2;
   |SI FSalida ! 0;  |ACABA;  |FINSI;
   temporal1 = ficher + ".dat";
   temporal2 = basico + ".dat";
   |COPIA_FICHERO temporal1,temporal2;
   |SI FSalida ! 0;
      temporal2 = basico + ".ixx";
      |FBORRA temporal2;
      |ACABA;
   |FINSI;
   temporal1 = ficher + ".ddx";
   temporal2 = basico + ".ddx";
   |COPIA_FICHERO temporal1,temporal2;
|FPRC;
