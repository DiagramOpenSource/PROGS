|FICHEROS;
     rem01019;
     rew00719;
|FIN;

|VARIABLES;
      nCampo           = 0;
      nRango           = 0;
      nNumCampos       = 0;
      nGrid            = 0;

      aAlfa            = "";
      aQueQuiero       = "";
      aNumCampos       = "";
      aEsc1            = "";
      aEsc2            = "";
      aRetu            = "";
      aTecla           = "";

     &enEmpresa        = 0;
     &enComplementaria = 0;
     &eaContri         = "";
|FIN;

|PROCESO PintaDatosPantalla;
     |DDEFECTO #rew00719;
     |PARA nCampo = 0;  |SI nCampo [ nNumCampos;  |HACIENDO nCampo = nCampo + 1;
           #rew00719#nCampo# = #rem01019#nCampo#;

           |C_V #rew00719#nCampo#, 0, aAlfa;
           |SI aAlfa = "S";  |PINTA #rew00719#nCampo#;  |FINSI;
     |SIGUE;
|FPRC;

|PROCESO Evento1019;
     |SI FSalida = 1;  |O FSalida = 2;
         |LEE 000#rem01019.=;

         |HAZ PintaDatosPantalla;
     |FINSI;
|FPRC;

|PROCESO Baja1019;
     #rem01019#0 = enEmpresa;
     #rem01019#1 = enComplementaria;
     #rem01019#2 = eaContri;
     #rem01019#3 = 1;
|FPRC;

|PROCESO Alta1019;
     #rem01019#0 = enEmpresa;
     #rem01019#1 = enComplementaria;
     #rem01019#2 = eaContri;
     #rem01019#3 = 999;
|FPRC;

|PROGRAMA;
     aQueQuiero  = "|NC";
     aNumCampos  = #rem01019#aQueQuiero#;
     nNumCampos  = aNumCampos;
     nNumCampos  = nNumCampos - 1;
     nRango      = 4 + 8 + 16 + 32 + 128;

     |PINPA #0#rew00719;

     |DDEFECTO #rem01019;
     |HAZ PintaDatosPantalla;

     |ABRET #rem01019;

     |LINEAL_SIMPLE #1#rem01019, nRango, 0602, 1098, Baja1019, Alta1019, Evento1019;
     nGrid = FSalida;

     aEsc1  = &255 + "806";
     aEsc2  = &255 + "807";
     aRetu  = &255 + "802";
     |PARA; |SI;  |HACIENDO;
          FSalida = "::{{001}}Salir," + nGrid;
          |LEETECLA aTecla;
          |SI aTecla = aEsc1; |SAL;  |FINSI;
          |SI aTecla = aEsc2; |SAL;  |FINSI;
          |SI aTecla = aRetu; |SAL;  |FINSI;
     |SIGUE;

     |CIERRAT #rem01019;
|FPRO;
