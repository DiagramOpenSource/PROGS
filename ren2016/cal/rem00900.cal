|PROCESO RecogeDatos;
     aAlfa = "/u/dsprofes/ren2016/cogetxt/rem00900.txt";
     |XABRE "",  aAlfa,  nHandle;

     |PARA;  |SI;  |HACIENDO;
          |XLEE nHandle, 255, aLineaMenu;
          |SI FSalida [ 0;  |SAL;  |FINSI;

          aCodigo1   = "";
          aCodigo2   = "";
          aCodigo3   = "";
          aPrograma  = "";
          nCodigos   = 1;
          nCodigo1   = 0;
          nCodigo2   = 0;
          nCodigo3   = 0;
          nPos       = 1;
          nLLaves    = 0;
          aContenido = "";
          |PARA;  |SI;  |HACIENDO nPos = nPos + 1;
               nPosi = (nPos * 100) + 1;

               aCaracter = aLineaMenu % nPosi;

               |SI aCaracter = "}";  |SAL;  |FINSI;

               |SI aCaracter = ":";
                   nCodigos = 0;
               |FINSI;

               |SI aCaracter = "{";
                   nLLaves   = nLLaves + 1;
               |FINSI;

               |SI aCaracter = ",";  |Y nCodigos ! 0;
                   nCodigos = nCodigos + 1;
               |FINSI;

               |SI nCodigos = 1;  |Y aCaracter ! ",";
                   aCodigo1 = aCodigo1 + aCaracter;
               |FINSI;

               |SI nCodigos = 2;  |Y aCaracter ! ",";
                   aCodigo2 = aCodigo2 + aCaracter;
               |FINSI;

               |SI nCodigos = 3;  |Y aCaracter ! ",";
                   aCodigo3 = aCodigo3 + aCaracter;
               |FINSI;

               |SI nCodigos = 0;  |Y nLLaves = 0;  |Y aCaracter ! ":";
                   aContenido = aContenido + aCaracter;
               |FINSI;

               |SI nLLaves = 2;  |Y aCaracter ! "{";
                   aPrograma = aPrograma + aCaracter;
               |FINSI;
          |SIGUE;

          |DDEFECTO #rem00900;
          #rem00900#0 = aCodigo1;
          #rem00900#1 = aCodigo2;
          #rem00900#2 = aCodigo3;
          #rem00900#3 = aContenido;
          #rem00900#4 = aPrograma % 108;
          #rem00900#5 = aPrograma % 902;
          |GRABA 020#rem00900.n;
          |LIBERA #rem00900;
     |SIGUE;
     |XCIERRA nHandle;
|FPRC;

|PROCESO rem00900;
     aAlfa      = "";
     aContenido = #rem00900#4;  |QBF aContenido;
     aContenido = aContenido + #rem00900#5;

                       aAlfa2 = "{{" + aContenido + "}}";
                       aAlfa1 = #rem00900#0;
     |SI #rem00900#1 ! 0;  aAlfa1 = aAlfa1 + "," + #rem00900#1;  |FINSI;
     |SI #rem00900#2 ! 0;  aAlfa1 = aAlfa1 + "," + #rem00900#2;  |FINSI;

     aAlfa1 = aAlfa1 + ":" + #rem00900#3;  |QBF aAlfa1;
     aAlfa1 = aAlfa1 + " " + aAlfa + " " + aAlfa2;  |QBF aAlfa1;

     aAlfa  = aAlfa1 % 0;
     nLong  = aAlfa;
     |PARA nCaracter = nLong;  |SI nCaracter [ 148;  |HACIENDO nCaracter = nCaracter + 1;
           aAlfa1  = aAlfa1 + " ";
     |SIGUE;

     aAlfa1 = aAlfa1 + &13 + &10;
     |XGRABA nHandle, aAlfa1;
|FPRC;

|DEFBUCLE rem00900;
     #rem00900#1;
     ;
     INICIO;
     FINAL;
     ;
     NULL, rem00900;
|FIN;

|PROCESO HazElTxt;
     aAbre = "/u/dsprofes/ren2016/cogetxt/rem00900.txt";

     |XABRE "WB", aAbre, nHandle;
     |BUCLE rem00900;
     |XCIERRA nHandle;
|FPRC;

|PROCESO Tipo80Fm900;  |TIPO 80;
     ||HAZ HazElTxt;

     |ABRET #rem00900;
     |LEE 000#rem00900.p;
     |SI FSalida ! 0;
         |HAZ RecogeDatos;
     |FINSI;

     FSalida = 2799;
|FPRC;

|PROCESO Tipo90Fm900;  |TIPO 90;
     |CIERRAT #rem00900;
|FPRC;
