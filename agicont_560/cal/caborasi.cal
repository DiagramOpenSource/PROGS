|PROCESO altatra;                  || calculo 'guarda' y 'entmod'
  modcon = 1;               || graba el temporal para la actualiz. de ctas.
  #5#0 = codcon;
  #5#1 = #1#4;
  #5#2 = #1#5;
  #5#3 = #1#1;
  #5#4 = #1#8;
  #5#6 = #1#0;
  |LEE 101#5=;
  |SI FSalida ! 0;
      |DDEFECTO #5;
      #5#0 = codcon;
      #5#1 = #1#4;
      #5#2 = #1#5;
      #5#3 = #1#1;
      #5#4 = #1#8;
      #5#6 = #1#0;
      |GRABA 020#5b;
  |FINSI;
  #5#5 = #5#5 - #1#9;
  |GRABA 020#5a;
  |LIBERA #5;
  cam = 1
|FPRC;
