|| *************************************************************************
||                  ACTUALIZA LAS CUENTAS DE TRABAJO
|| *************************************************************************
|PROCESO a_actualiza;                || rutina 'a_cuentas'
  ini = dig1;
  fecalf = #1#1;
  mes = fecalf % 402;
  mesfec = mes;
  |SI ini = 1;
      mesac = mesfec;
  |SINO;
      mesac = (mesfec - ini) + 1;
      |SI mesac [ 0;
          mesac = (13 - ini) + mesfec;
      |FINSI;
  |FINSI;
  a = (mesac * 3) + 9;
  b = a + 1;
  c = a + 2;
  |SI #1#8 = "D";
      #3a = #3a - #1#9;
      #3#51 = #3#51 - #1#9;
  |SINO;
      #3b = #3b - #1#9;
      #3#52 = #3#52 - #1#9;
  |FINSI;
  #3c = #3a - #3b;
  #3#53 = #3#51 - #3#52;
|FPRC;

|PROCESO actuacuen;
  |SI #1#0 = 0;
      |SI #1#8 = "D";
          #3#9 = #3#9 - #1#9;        || diario cero (saldos iniciales)
          #3#51 = #3#51 - #1#9;
      |SINO;
          #3#10 = #3#10 - #1#9;
          #3#52 = #3#52 - #1#9;
      |FINSI;
      #3#11 = #3#9 - #3#10;
      #3#53 = #3#51 - #3#52;
  |SINO;
      |SI #1#0 = 99;
          |SI #1#8 = "D";
              #3#48 = #3#48 - #1#9;       || diario 99 (saldos finales)
              #3#51 = #3#51 - #1#9;
          |SINO;
              #3#49 = #3#49 - #1#9;
              #3#52 = #3#52 - #1#9;
          |FINSI;
          #3#50 = #3#48 - #3#49;
          #3#53 = #3#51 - #3#52;
      |SINO;
          |HAZ a_actualiza;           || saldos del mes correspondiente
      |FINSI;
  |FINSI;
  |GRABA 020#3a;
  |LIBERA #3;
|FPRC;
