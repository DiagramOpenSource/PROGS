  #4#4 = #7mes_fin;        || exist. iniciales
  mes_fin = #0#15 + 11;   || mes finales
  #4#5 = #7mes_fin;        || exist. finales
  descar = #4#4 - #4#5;
  |SI descar ] 0;
      #4#6 = #7#5;     || cuenta descarga D
      #4#7 = #7#6;     || digito descarga D
