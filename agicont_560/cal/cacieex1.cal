|FPRC;

|PROCESO proceso; |TIPO 3;
  |HAZ conexi;
  |DELINDEX #4;
  |ABRE #2;
  |ABRE #3;
  |HAZ pidepan;   || prepara temporal existencias
  |HAZ exis0;     || graba iniciales y finales
  |HAZ expl0;     || asiento explotacion y variaciones de existencias
  |BLIN 4;
  |HAZ final;     || actualiza niveles
  |CIERRA #2;
  |CIERRA #3;
|FPRC;

|PROCESO carga;
  |SI #3#08 = "H";
