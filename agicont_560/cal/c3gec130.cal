|PROCESO calcular;
  |SI #8#83 ! "N";
      #5#31 = #5#30 % 2;
      #5#29 = #5#31 - #5#36;
      |SI #5#29 < 0; #5#29 = 0; |FINSI;
      |ACABA;
  |FINSI;

  #5#8  = #5#6 + #5#7;
  #5#11 = #5#9;
  #5#14 = #5#12 + #5#13;

  |SI #5#16 ! 0;
      #5#17 = #5#16;
  |SINO;
      #5#17 = #5#15;
  |FINSI;

  #5#18 = #5#8 + #5#11 - #5#14 - #5#17;

  |SI #8#81 = "B";
      #5#21 = #5#18 % #5#20;
      #5#19 = 0;
  |SINO;
      |SI #8#82 = "P"; #5#19 = #5#8 % 1; |SINO; #5#19 = 0; |FINSI;
      #5#21 = 0;
  |FINSI;

  |SI #5#3 ] 98; |O #5#3 [ 10; #5#19 = 0; |FINSI;

  |SI #5#18 < 0; #5#19 = 0; #5#21 = 0; |FINSI;

  #5#22 = #5#18 - #5#19 - #5#21;

  #5#25 = #5#23 + #5#24;

  |SI #8#87 = 1; #5#26 = #5#18; |SINO; #5#26 = #5#22; |FINSI;

  #5#26 = #5#26 + #5#37;

  #5#27 = #5#26 % 20;
  #5#29 = #5#27 - #5#28 - #5#25

  |SI #5#29 < 0; #5#29 = 0; |FINSI;
|FPRC;

|PROCESO cal_ctas2;
   cta = #2#0 + "            ";
   cta = cta % A112;
   |ATRI R; |PINTA 2265, cta; |ATRI 0;
   cc3 = 12 + (periodo - 1) * 9;
   cc4 = 15 + (periodo - 1) * 9;
   cc5 = 18 + (periodo - 1) * 9;
   |SI #4#4 = "H";
       cc3 = cc3 + 1;
       cc4 = cc4 + 1;
       cc5 = cc5 + 1;
   |FINSI;
   |SI #4#4 = "S";
       cc3 = cc3 + 2;
       cc4 = cc4 + 2;
       cc5 = cc5 + 2;
   |FINSI;
   scta = #2cc3 + #2cc4 + #2cc5;
   |SI #4#3 = "I"; |Y #4#4 = "S";
       scta = - scta;
   |FINSI;
   sumactas = sumactas + scta;
|FPRC;

