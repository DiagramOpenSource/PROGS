|PROCESO recogelin;
   #9#0 = #8#0;
   #9#1 = #8#1;
   #9#2 = #8#2;
   #9#3 = #8#3;
   |LEE 101#9=;
   estadolin = FSalida;
   #9#0 = #8#0;
