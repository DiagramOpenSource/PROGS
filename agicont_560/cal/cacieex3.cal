========================================================================
                     ASIENTO EXPLOTACION
========================================================================

|PROCESO expl5;         || perdidas y ganacias
  impo = #2#4 - #2#5;   || saldo de la cabecera del asiento de explotacion
  |SI impo = 0;  |ACABA;  |FINSI;
  line = line + 3;
  |DDEFECTO #3;
  #3#00 = #0#11; ||  diario
  #3#01 = #0#0;  ||  fecha
  #3#02 = asie;  ||  documento
  #3#03 = line;  ||  linea
  |LEE 101#3=;
  FEstado = FSalida;
  #3#04 = #6#2;  ||  cuenta
  #3#05 = #6#3;  ||  digito
  #3#06 = #0#10; ||  concepto (explotacion)
  #3#07 = #0#5;  ||  descripcion (explotacion)
  |SI impo > 0;  #3#08 = "H";  |FINSI;
  |SI impo < 0;  #3#08 = "D";  impo = impo * -1;  |FINSI;
  |HAZ carga;
  #3#09 = impo;  ||  importe
  |SI FEstado = 0;
      |GRABA 020#3a;
  |SINO;
      |GRABA 020#3n;
  |FINSI;
  |LIBERA #3;
  |HAZ cabecera;
  |HAZ actualiz1;   || actualiza cuentas
  opera = "A";
  |HAZ altatra;     || actualiza niveles
|FPRC;

|PROCESO expl4;   || apuntes para saldar explotacion
  |SI #1#3 ! "S";  |ACABA;  |FINSI;
  |SI #1#53 = 0;   |ACABA;  |FINSI;
  |PINTA 0436, #1#0;
  impo = #1#53;
  |SI line = 1;
      |HAZ contador;  asie = #20#1;
  |FINSI;
  |DDEFECTO #3;
  #3#00 = #0#11; ||  diario
  #3#01 = #0#0;  ||  fecha
  #3#02 = asie;  ||  documento
  #3#03 = line;  ||  linea
  |LEE 101#3=;
  FEstado = FSalida;
  #3#04 = #1#0;  ||  cuenta
  #3#05 = #1#1;  ||  digito
  #3#06 = #0#10; ||  concepto (explotacion)
  #3#07 = #0#5;  ||  descripcion (explotacion)
  |SI impo > 0;  #3#08 = "H";  |FINSI;
  |SI impo < 0;  #3#08 = "D";  impo = impo * -1;  |FINSI;
  |HAZ carga;
  #3#09 = impo;  ||  importe
  |SI FEstado = 0;  |GRABA 020#3a;  |FINSI;
  |SI FEstado ! 0;  |GRABA 020#3n;  |FINSI;
  |LIBERA #3;
  |HAZ cabecera;
  |HAZ actualiz1;   || actualiza cuentas
  opera = "A";
  |HAZ altatra;     || actualiza niveles
  line = line + 3;
|FPRC;

