          #1#51 = #1#51 + #3#9;
      |SINO;
          #1#10 = #1#10 + #3#9;
          #1#52 = #1#52 + #3#9;
      |FINSI;
      #1#11 = #1#9 - #1#10;
      #1#53 = #1#51 - #1#52;
  |SINO;
      |SI #3#0 = 99;
          |SI #3#8 = "D";
              #1#48 = #1#48 + #3#9;
              #1#51 = #1#51 + #3#9;
          |SINO;
              #1#49 = #1#49 + #3#9;
              #1#52 = #1#52 + #3#9;
          |FINSI;
          #1#50 = #1#48 - #1#49;
          #1#53 = #1#51 - #1#52;
      |SINO;
          |HAZ actualiz2;
      |FINSI;
  |FINSI;
  |SI #1#58 < #0#0;
      #1#58 = #0#0;
  |FINSI;
  |GRABA 020#1a;
  |SI desbloquea = 0;  ||  en las ctas. de variaciones hace dos grabaciones
