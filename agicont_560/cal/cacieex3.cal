      |DDEFECTO #8;
      #8#0 = codcon;
      #8#1 = #3#4;
      #8#2 = #3#5;
      #8#3 = #3#1;
      #8#4 = #3#8;
      #8#6 = #3#0;
      |GRABA 101#8b;
  |FINSI;
