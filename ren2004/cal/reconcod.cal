|FICHEROS;
    reconcod #0;
    rem00100 #1;
    reconfac #3;
    :/facturar/def/asclient #2;
|FIN;

|VARIABLES;
    putada = "";
    fuera = 0;
    path = "";
    &eaPathFacturar = "";
|FIN;

|PROGRAMA;
|CLS;
|CABEZA "Codigos Facturacion";
|PINPA #0#0;
|HAZ control;
|SI fuera = 0;
    |ENTLINEAL #1#0, 1, 1, 20, 0, min, max;
|FINSI;
|FPRO;

|CALCULO min;
    #0#0 = 1;
|FCAL;

|CALCULO max;
    #0#0 = 99999;
|FCAL;

|CALCULO control;
    |HAZ BusquedaApli;
    |SI eaPathFacturar = "";
        |MENAV "      No existe Facturacion";
        |PTEC 807;
        |ACABA;
    |FINSI;

    fuera  = 0;
    path   = eaPathFacturar;
    putada = #3#1;  putada = "00" + #3#1;  putada = putada % -102;
    path   = path + "fich/" + putada + "/";
|FCAL;

|CALCULO lee_renta; |TIPO 0;
    |ABRE #1;
    #1#0 = #0#0;
    |LEE 001#1=;
    |SI FSalida ! 0;
        |DDEFECTO #1;
        |MENAV "    ATENCION!!! Contribuyente inexistente ...";
        |ERROR;
    |FINSI;
    |CIERRA #1;
    #0#1 = #1#5;
    |PINTA #0#1;
|FCAL;

|CALCULO lee_facges; |TIPO 0;
|PATH_DAT #2 path;
|ABRE #2;
    #2#0 = #0#2;
|LEE 001#2=;
|SI FSalida ! 0;
        #2#2 = "<INEXISTENTE>";
|FINSI;
|CIERRA #2;
    #0#3 = #2#2;
|PINTA #0#3;
|FCAL;
