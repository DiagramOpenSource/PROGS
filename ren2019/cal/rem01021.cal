|FICHEROS;
     rem01021;
     rew00721;
|FIN;

|VARIABLES;
      nCampo           = 0;
      nRango           = 0;
      nNumCampos       = 0;
      nGrid            = 0;

      aAlfa            = "";
      aQueQuiero       = "";
      aNumCampos       = "";
      aEsc1            = "";
      aEsc2            = "";
      aRetu            = "";
      aTecla           = "";

     &enEmpresa        = 0;
     &enComplementaria = 0;
     &eaContri         = "";
|FIN;

|PROCESO PintaDatosPantalla;
     |DDEFECTO #rew00721;
     |PARA nCampo = 0;  |SI nCampo [ nNumCampos;  |HACIENDO nCampo = nCampo + 1;
           #rew00721#nCampo# = #rem01021#nCampo#;

           |C_V #rew00721#nCampo#, 0, aAlfa;
           |SI aAlfa = "S";  |PINTA #rew00721#nCampo#;  |FINSI;
     |SIGUE;
|FPRC;

|PROCESO Evento1021;
     |SI FSalida = 1;  |O FSalida = 2;
         |LEE 000#rem01021.=;

         |HAZ PintaDatosPantalla;
     |FINSI;
|FPRC;

|PROCESO Baja1021;
     #rem01021#0 = enEmpresa;
     #rem01021#1 = enComplementaria;
     #rem01021#2 = eaContri;
     #rem01021#3 = 1;
|FPRC;

|PROCESO Alta1021;
     #rem01021#0 = enEmpresa;
     #rem01021#1 = enComplementaria;
     #rem01021#2 = eaContri;
     #rem01021#3 = 999;
|FPRC;

|PROGRAMA;
     aQueQuiero  = "|NC";
     aNumCampos  = #rem01021#aQueQuiero#;
     nNumCampos  = aNumCampos;
     nNumCampos  = nNumCampos - 1;
     nRango      = 4 + 8 + 16 + 32 + 128;

     |PINPA #0#rew00721;

     |DDEFECTO #rem01021;
     |HAZ PintaDatosPantalla;

     |ABRET #rem01021;

     |LINEAL_SIMPLE #1#rem01021, nRango, 0602, 1098, Baja1021, Alta1021, Evento1021;
     nGrid = FSalida;

     aEsc1  = &255 + "806";
     aEsc2  = &255 + "807";
     aRetu  = &255 + "802";
     |PARA; |SI;  |HACIENDO;
          FSalida = "::{{001}}Salir," + nGrid;
          |LEETECLA aTecla;
          |SI aTecla = aEsc1; |SAL;  |FINSI;
          |SI aTecla = aEsc2; |SAL;  |FINSI;
          |SI aTecla = aRetu; |SAL;  |FINSI;
     |SIGUE;

     |CIERRAT #rem01021;
|FPRO;
