|FICHEROS;
    vaticuen #0;
    vaconcta #1;
|FIN;

|VARIABLES;
    alfa1 = "";
    alfa2 = "";
    nume1 = 0;
    modo  = 0;
    &enPlan = 0;
|FIN;
____________________________________/

|PROCESO longitud; |TIPO 0;
    modo = (FEntrada / 100) ! 0;
|SI modo = 1;
    alfa1 = #0#0;
    |QBF alfa1;
    alfa2 = alfa1 % 0;
    nume1 = alfa2;
    |SI nume1 ! #1#1;
        alfa1 = "    Las cuentas deberan medir [" + #1#1 + "] digitos ...";
        |MENAV alfa1;
    |FINSI;
|FINSI;
|FPRC;

|PROCESO ClaveBaja;
 #0#0 = "            ";
 #0#2 = enPlan;
|FPRC;

|PROCESO ClaveAlta;
 #0#0 = "zzzzzzzzzzzz";
 #0#2 = enPlan;
|FPRC;

|PROGRAMA;
  |ABRE #1;
  |LEE 000#1p;
  |SI FSalida ! 0;
      |MENAV "    Control de longitud de cuenta SIN DEFINIR ...";
      |PTEC 807;
  |FINSI;
  |CIERRA #1;

  |CLS;
  |PINPA #0#0;
  alfa1 = " PLAN CONTABLE " + enPlan + " ";
  |ATRI R; |PINTA 0521,alfa1; |ATRI 0;
  |ENTLINEAL #1#0, -2, 2, 21, 0, ClaveBaja, ClaveAlta;
|FPRO;
