|VARIABLES;
     &variable = "";
     &eaValXor = "";
     &eaAlfa = "";
     nNume = 0;
     aAlfa = "";
     nRes = 0;
     nVal = 0;
     nNum = 0;
     aNum1 = "";
     aNum2 = "";
     aCar1 = "";
     aCar2 = "";
     ii = 0;
     aLon = "";
     i = 0;
     aResul = "";
     nPos = 0;
     aCar = "";
     nPotencia = 0;
     aNuevo = "";
|FIN;

||Entrada: aAlfa
||Salida.: nNume
|PROCESO Bin2Dec;
     nNume = 0;
     aAlfa = ("00000000" + aAlfa) % -108;
     |PARA ii = 101; |SI ii [ 801; |HACIENDO ii = ii + 100;
          aCar1 = aAlfa % ii;
          nNum = aCar1;
          |SI ii = 101; nPotencia = 128; |FINSI;
          |SI ii = 201; nPotencia = 64; |FINSI;
          |SI ii = 301; nPotencia = 32; |FINSI;
          |SI ii = 401; nPotencia = 16; |FINSI;
          |SI ii = 501; nPotencia = 8; |FINSI;
          |SI ii = 601; nPotencia = 4; |FINSI;
          |SI ii = 701; nPotencia = 2; |FINSI;
          |SI ii = 801; nPotencia = 1; |FINSI;
          nNume = nNume + (nNum * nPotencia);
     |SIGUE;
|FPRC;

||Entrada: aNum1, aNum2
||Salida.: aAlfa = aNum1 XOR aNum2
|PROCESO Xor;
     aAlfa = "";
     aNum1 = ("00000000" + aNum1) % -108;
     aNum2 = ("00000000" + aNum2) % -108;
     |PARA ii = 101; |SI ii [ 801; |HACIENDO ii = ii + 100;
          aCar1 = aNum1 % ii;
          aCar2 = aNum2 % ii;
          |SI aCar1 = 1; |Y aCar2 = 1; aAlfa = aAlfa + "0"; |FINSI;
          |SI aCar1 = 1; |Y aCar2 = 0; aAlfa = aAlfa + "1"; |FINSI;
          |SI aCar1 = 0; |Y aCar2 = 1; aAlfa = aAlfa + "1"; |FINSI;
          |SI aCar1 = 0; |Y aCar2 = 0; aAlfa = aAlfa + "0"; |FINSI;
     |SIGUE;
|FPRC;

||Entrada: nNume -> valor decimal (maximo 255)
||Salida.: aAlfa -> valor binario
|PROCESO Dec2Bin;
     aAlfa = "";
     |PARA; |SI; |HACIENDO;
          nRes = nNume $ 2;
          aAlfa = nRes + aAlfa;
          nNume = (nNume - nRes) / 2;
          |SI nNume [ 1; |SAL; |FINSI;
     |SIGUE;
     aAlfa = nNume + aAlfa;
     aAlfa = ("00000000" + aAlfa) % -108;
|FPRC;

|PROCESO Encripta;
     aResul = "";
     aLon = variable % A0;
     |PARA i = 1; |SI i [ aLon; |HACIENDO i = i + 1;
          nPos = i * 100 + 1;
          aCar = variable % nPos;

          nNume = eaValXor; |HAZ Dec2Bin;
          aNum1 = aAlfa;
          nNume = &aCar; |HAZ Dec2Bin;
          aNum2 = aAlfa;
          |HAZ Xor;
          |HAZ Bin2Dec;
          aNuevo = &nNume;
          aResul = aResul + aNuevo;
     |SIGUE;
     variable = aResul;
|FPRC;

|PROCESO Ejemplo;
     ||---- Encripta "P" con el valor 15
     nNume = 15; |HAZ Dec2Bin;
     aNum1 = aAlfa;

     aAlfa = "P";
     nNume = &aAlfa; |HAZ Dec2Bin;
     aNum2 = aAlfa;

     |HAZ Xor;
     |HAZ Bin2Dec;
     aNuevo = &nNume;         || valor nuevo
|DEBUG;
     ||---- Desencripta el valor nuevo a "P"
     nNume = 15; |HAZ Dec2Bin;
     aNum1 = aAlfa;

     aAlfa = aNuevo;
     nNume = &aAlfa; |HAZ Dec2Bin;
     aNum2 = aAlfa;

     |HAZ Xor;
     |HAZ Bin2Dec;
     aNuevo = &nNume;         || valor original
|DEBUG;
|FPRC;
