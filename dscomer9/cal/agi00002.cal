|FICHEROS;
     agi00002 #0;
     agi00003 #1;
|FIN;

|VARIABLES;
     &nDeci_Base = 0;
     modo      = 0;
     numero    = 0;
     &sserie   = "";
     &nnumer   = 0;
     &llinea   = 0;
     &ffecha   = @;
     &cclien   = "";
     &nnombr   = "";
     &consulta = "";
     &iimpor   = 0;
     &ccoste   = 0;
     &orden    = "";
     &pasa     = "";
|FIN;

||---------------------------------------------------------------------------
|| CONTADOR AUTOMATICO.
||---------------------------------------------------------------------------
|PROCESO numero; |TIPO 7;
     modo = (FEntrada / 100) ! 0;
     |SI modo = 1;
          |LEE 000#0u;
          |SI FSalida = 0;
               numero = #0#0 + 1;
          |SINO;
               numero = 1;
          |FINSI;
          |DDEFECTO #0;
          #0#0 = numero;
          |PINTA #0#0;
          |PTEC 802;
     |FINSI;
|FPRC;

||---------------------------------------------------------------------------
|| PRINCIPIO.
||---------------------------------------------------------------------------
|PROGRAMA;
     |SI sserie ! ""; |O nnumer ! 0; |O llinea ! 0;
          |ABRE #0;
          |SI consulta = "S";
               |PINPA #0#0;
               |SELECT #4#0;
               #0#2  = sserie;
               #0#3  = nnumer;
               |LEE 000#0=;
               |SI FSalida = 0;
                    |PINDA #0#0;
                    |ENDATOS #2#0;
               |FINSI;
          |SINO;
               |PINPA #0#0;
               |SELECT #4#0;
               #0#2  = sserie;
               #0#3  = nnumer;
               |LEE 000#0=;
               |SI FSalida = 0;
                    #0#4  = ffecha;
                    #0#5  = cclien;
                    #0#6  = nnombr;
                    #0#7  = iimpor;
                    |PINDA #0#0;
                    |ENDATOS #2#0;
                    |SI FSalida = 0;
                         |GRABA 021#0a;
                    |FINSI;
               |SINO;
                    |SELECT #1#0;
                    |LEE 000#0u;
                    |SI FSalida = 0;
                         numero = #0#0 + 1;
                    |SINO;
                         numero = 1;
                    |FINSI;
                    |DDEFECTO #0;
                    #0#0  = numero;
                    #0#2  = sserie;
                    #0#3  = nnumer;
                    #0#4  = ffecha;
                    #0#5  = cclien;
                    #0#6  = nnombr;
                    #0#7  = iimpor;
                    #0#8  = ccoste;
                    |PINDA #0#0;
                    |ENDATOS #1#0;
                    |SI FSalida = 0;
                         |GRABA 021#0n;
                    |FINSI;
               |FINSI;
          |FINSI;
          |CIERRA #0;
     |SINO;
          |MANTE #0;
     |FINSI;
|FPRO;

||---------------------------------------------------------------------------
|| PINTA EL GRAFICO RELACIONADO CON EL CODIGO DEL TRABAJO.
||---------------------------------------------------------------------------
|PROCESO pintabmp; |TIPO 0;
     |SI FSalida = 16;
          orden = #0#0;
          pasa = "T";
          |SUB_EJECUTA_NP "agi00009.tab";
          orden = 0;
     |FINSI;
|FPRC;

|PROCESO pintabmpl; |TIPO 11;
     |SI FSalida = 16;
          orden = #0#0;
          pasa = "T";
          |SUB_EJECUTA_NP "agi00009.tab";
          orden = 0;
     |FINSI;
     |HAZ no_entra;
|FPRC;

|PROCESO no_entra; |TIPO 0;
     |SI FSalida = 0;
          |PTEC 802;
     |FINSI;
|FPRC;
