|FICHEROS;
     ib__sala #0; ||Este Def.
     ib__mesa #1;
|FIN;

|VARIABLES;
     nModo     = 0;
     nForma    = 0;
|FIN;

|INCLUYE i_puntov;

|PROCESO BorraMesa;
     |BORRA 020#1a;
|FPRC;

|DEFBUCLE BorraMesa;
     #1#1;
     ;
     #0#0, 001;
     #0#0, 999;
     be;
     NULL, BorraMesa;
|FIN;

|PROCESO Tipo2; |TIPO 2;
     nModo = (FEntrada / 100) ! 0;
     nForma = 0 +. 1;
     |SI nForma = 1;
          |ENTLINEAL #1#1, -2, 2, 22, 0, Min1, Max1;
     |FINSI;
     |SI nModo = 3;
          |BUCLE BorraMesa;
     |FINSI;
|FPRC;

|PROCESO PintaMesa; |TIPO 7;
     |ENTLINEAL #1#1, -2, 7, 22, 0, Min1, Max1;
|FPRC;

|PROCESO Min1;
     #1#5 = #0#0;
     #1#0 = 1;
|FPRC;

|PROCESO Max1;
     #1#5 = #0#0;
     #1#0 = 999;
|FPRC;

|PROCESO Min;
     #0#0 = 1;
|FPRC;

|PROCESO Max;
     #0#0 = 99;
|FPRC;

|PROCESO CargaFich1;
     aNom = "mesa";

     aPun = ("00" + aPun) % -102;
     aFich = "ib" + aPun + aNom;
     |NOME_DAT #1 aFich;
|FPRC;

|PROGRAMA;
     |CLS;
     |HAZ CargaFich;
     |HAZ CargaFich1;
     |ENTLINEAL #1#1, -2, 7, 22, 1, Min1, Max1;
     |ENTLINEAL #1#0, -1, 2, 22, 0, Min, Max;
|FPRO;
