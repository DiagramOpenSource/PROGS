|FICHEROS;
     matade01 #0;
     agifa019 #19;
     dsm00023 #23;
     dsm00238 #238;
|FIN;

|VARIABLES;
     &eaSerie = "";
     &enCodigo = 0;
     &enLinea = 0;
     &enUnidad1 = 0;
     &enUnidad2 = 0;
     &eaArticulo = "";
     &enModo = 0;
     nUni = 0;
     nPeso = 0;
     nDif = 0;
     aAlfa = "";
     nLinea = 0;
|FIN;

|PROCESO T2; |TIPO 2;
     #19#7 = #19#7 +. #0#4;
     |PINTA 1369, #19#7;
|FPRC;

|PROCESO Max;
     #0#0 = eaSerie;
     #0#1 = enCodigo;
     #0#2 = enLinea;
     #0#3 = 99999999;
|FPRC;

|PROCESO Min;
     #0#0 = eaSerie;
     #0#1 = enCodigo;
     #0#2 = enLinea;
     #0#3 = 1;
|FPRC;

|PROCESO Borralo;
     |BORRA 020#0a;
|FPRC;

|DEFBUCLE Borralo;
     #0#1;
     ;
     eaSerie, enCodigo, enLinea, 1;
     eaSerie, enCodigo, enLinea, 99999999;
     be;
     NULL, Borralo;
|FIN;

|PROCESO Cuenta;
     nPeso = nPeso + #0#4;
     nLinea = nLinea + 1;
|FPRC;

|DEFBUCLE Cuenta;
     #0#1;
     ;
     eaSerie, enCodigo, enLinea, 1;
     eaSerie, enCodigo, enLinea, 99999999;
     be;
     NULL, Cuenta;
|FIN;

|PROGRAMA;
     |ABRE #0;
     |SI PARAMETRO = "menu";
          |CONSULTA_CLAVE #1#0;
     |SINO;
          |SI enModo = 3;
               |BUCLE Borralo;
          |SINO;
               |ABRE #19;
               #19#0 = eaArticulo;
               |LEE 000#19=;
               |CIERRA #19;
               |SI #19#179 = "N";
                    nUni = enUnidad1;
               |SINO;
/*
                    |ABRE #238;
                    #238#0 = #19#201;
                    |LEE 000#238=;
                    |SI #238#6 = 1;
                         nUni = enUnidad1 ! 2;
                    |SINO;
                         nUni = enUnidad2 ! 2;
                    |FINSI;
                    |CIERRA #238;
*/
                    |ABRE #23;
                    #23#0 = "AV";
                    |LEE 000#23=;
                    |SI #23#2 = "PR";
                         nUni = enUnidad1 ! 2;
                    |SINO;
                         nUni = enUnidad2 ! 2;
                    |FINSI;
                    |CIERRA #23;
               |FINSI;

               |PARA; |SI; |HACIENDO;
                    nPeso = 0; nLinea = 0;
                    |SI enModo = 1;
                         |BUCLE Borralo;
                    |SINO;
                         |BUCLE Cuenta;
                    |FINSI;
                    |PINPA #0#0;
                    #19#7 = nPeso; |PINTA 1369, #19#7;
                    |ENTLINEAL #1#0, 4, enModo, 22, 0, Min, Max;
                    |SI enModo = 4; |SAL; |FINSI;
                    nPeso = 0; nLinea = 0;
                    |BUCLE Cuenta;
                    |SI nLinea = 0; |SAL; |FINSI;

                    |SI nPeso ! nUni;
                         nDif = nUni - nPeso;
                         |AVISO;
                         aAlfa = "0000NPeso albaran " + nUni + &13 + "Introducido " + nPeso + &13 + "Diferencia " + nDif + " ¿Continuar?";
                         |CONFI aAlfa;
                         |SI FSalida = 0; |SAL; |FINSI;
                    |SINO;
                         |SAL;
                    |FINSI;
               |SIGUE;

               |SI enModo ! 4; |Y nLinea > 0;
                    |SI #19#179 = "N";
                         enUnidad1 = nPeso;
                    |SINO;
                         ||SI #238#6 = 1;
                         |SI #23#2 = "PR";
                              enUnidad1 = nPeso;
                              enUnidad2 = nLinea;
                         |SINO;
                              enUnidad1 = nLinea;
                              enUnidad2 = nPeso;
                         |FINSI;
                    |FINSI;
               |FINSI;

          |FINSI;
     |FINSI;
     |CIERRA #0;
|FPRO;
