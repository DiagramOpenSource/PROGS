|FICHEROS;
     malpe710  #710;
     malpe713  #713;
|FIN;

|VARIABLES;
     nPanta = 0;
     nBoton1 = 0;

     nBoton1_1 = 0;
     nBoton1_2 = 0;
     nBoton1_3 = 0;
     nBoton1_4 = 0;

     aAlfa = "";

     nRango = 0;
     nPos1 = 0;
     nPos2 = 0;
     aEsc1 = "";
     aEsc2 = "";
     aRetu = "";
     nGrid1 = 0;
     aTecla = "";

     &enDefinicion = 0;
     &enModo = 0;
     &enLinea = 0;
|FIN;

|PROCESO Evento710;
     |SI FSalida = 1;  |O FSalida = 2;
         |LEE 000#710=;
     |FINSI;
|FPRC;

|PROCESO Salir;
     |PTEC 806;
|FPRC;

|PROCESO Baja710;
     #710#0 = 1;
|FPRC;

|PROCESO Alta710;
     #710#0 = 99999;
|FPRC;

|PROCESO Tipo80Fm710;  |TIPO 80;
     |ABRET #710;

     FSalida = 2799;
|FPRC;

|PROCESO Tipo90Fm710;  |TIPO 90;
     |CIERRAT #710;
|FPRC;

|PROCESO Boton1_1;
     enDefinicion = #710#0;
     enModo       = 1;
     |SUB_EJECUTA_NP "malpe711";

     |REFRESCACONTROL nGrid1;
|FPRC;

|PROCESO Boton1_2;
     enDefinicion = #710#0;
     enModo       = 2;
     |SUB_EJECUTA_NP "malpe711";

     |REFRESCACONTROL nGrid1;
|FPRC;

|PROCESO Borraw713;
     |SI #713#0 = #710#0;
          |BORRA 020#713a;
     |SINO;
          |ERROR10;
     |FINSI;
|FPRC;

|DEFBUCLE Borraw713;
     #713#1;
     ;
     #710#0, "";
     #710#0, "zz";
     ;
     NULL, Borraw713;
|FIN;

|PROCESO Boton1_3;

     aAlfa = "0000NEsta seguro de dar de baja la definicion: " + #710#0;
     |QBF aAlfa;
     |CONFI aAlfa;
     |SI FSalida ! 0;   |ACABA;  |FINSI;

     |BUCLE Borraw713;

     |LEE 101#710=;
     |SI FSalida = 0;
          |BORRA 020#710a;
          |LIBERA #710;
          |REFRESCACONTROL nGrid1;
     |FINSI;


|FPRC;

|PROCESO Boton1_4;
     enLinea = #710#0;
     |SUB_EJECUTA_NP "malpe717";
|FPRC;

|PROCESO BotonesPanta1;
     |CONTROL_SIMPLE nPanta, "BOTON,{{193}} Nuevo ", 0977, 1098, Boton1_1;
     nBoton1_1 = FSalida;

     |CONTROL_SIMPLE nPanta, "BOTON,{{197}} Modificar ", 1277, 1398, Boton1_2;
     nBoton1_2 = FSalida;

     |CONTROL_SIMPLE nPanta, "BOTON,{{199}} Borrar ", 1577, 1698, Boton1_3;
     nBoton1_3 = FSalida;

     |CONTROL_SIMPLE nPanta, "BOTON,{{205}} Obtener ", 2177, 2298, Boton1_4;
     nBoton1_4 = FSalida;
|FPRC;

|PROGRAMA;
     |CABEZA "Configuracion";

     |PINPA #0#710;
     nPanta = FSalida;

     |CONTROL_SIMPLE 0, "BOTON,{{001}}Salir", 3585, 3595, Salir;
     nBoton1 = FSalida;

     nRango = 4 + 8 + 16 + 32;
     nPos1  = 0902;  nPos2  = 2275;

     |LEE 040#710p;

     |PINPA #0#710;
     nPanta = FSalida;

     |LINEAL_SIMPLE #1#710, nRango, nPos1, nPos2, Baja710, Alta710, Evento710;
     nGrid1 = FSalida;

     |HAZ BotonesPanta1;


     aEsc1  = &255 + "806";
     aEsc2  = &255 + "807";
     aRetu  = &255 + "802";
     |PARA; |SI;  |HACIENDO;
         FSalida = "::Salir," + nGrid1;
         |LEETECLA aTecla;
         |SI aTecla = aEsc1; |SAL;  |FINSI;
         |SI aTecla = aEsc2; |SAL;  |FINSI;
         |SI aTecla = aRetu; |SAL;  |FINSI;
     |SIGUE;

     |FIN_CONTROL_WINDOWS nBoton1_1;
     |FIN_CONTROL_WINDOWS nBoton1_2;
     |FIN_CONTROL_WINDOWS nBoton1_3;
     |FIN_CONTROL_WINDOWS nBoton1_4;
     |DESTRUYECONTROL nGrid1;

     |PULSATECLA;
|FPRO;
