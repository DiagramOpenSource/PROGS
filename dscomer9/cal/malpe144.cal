|PROCESO PasaArriba;
     #2#0 = #3#0;
     #2#1 = #3#1;
     #2#44 = #3#44;
     |LEE 121#2=;
     |SI FSalida = 0;
          #2#44 = "N";
          |GRABA 020#2a;
          |LIBERA #2;

          #3#44 = "N";
          |GRABA 020#3a;
          |LIBERA #3;

          #1#0 = #3#0;
          #1#1 = #3#1;
          |LEE 121#1=;
          |SI FSalida = 0;
               #1#44 = "N";
               |GRABA 020#1a
               |LIBERA #1;
          |FINSI;
     |FINSI;
|FPRC;

|PROCESO PasaAbajo;
     #3#0 = #2#0;
     #3#1 = #2#1;
     #3#44 = #2#44;
     |LEE 121#3=;
     |SI FSalida = 0;
          #3#44 = "P";
          |GRABA 020#3a;
          |LIBERA #3;

          #2#44 = "P";
          |GRABA 020#2a;
          |LIBERA #2;

          #1#0 = #2#0;
          #1#1 = #2#1;
          |LEE 121#1=;
          |SI FSalida = 0;
               #1#44 = "P";
               |GRABA 020#1a
               |LIBERA #1;
          |FINSI;
     |FINSI;
|FPRC;

|PROCESO UnoArriba;
     |HAZ PasaArriba;
