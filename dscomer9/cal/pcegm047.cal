|FICHEROS;
   pcegm047 #0;
|FIN;

|VARIABLES;
   aAlfa  = "";
   aAlfa1 = "";

   nCalc = 0;
|FIN;

|PROCESO MiraSintaxis;
   aAlfa = #pcegm047#2; |QBF aAlfa; aAlfa = aAlfa % 0;
   nCalc = aAlfa;
   |SI nCalc = 0;
      |MENAV "    El campo 'Caracter separador' est  vacio. Guardando el caracter por defecto";
      #pcegm047#2 = ","; |PINTA #pcegm047#2;
   |SINO;
      |SI nCalc > 1;
         |SI nCalc ! 4;
            aAlfa = "    Revise la sintaxis del campo (" + &38 + " + tres digitos del codigo ASCII)";
            |MENAV aAlfa;
            |ERROR;
         |SINO;
            aAlfa = #pcegm047#2; |QBF aAlfa;
            aAlfa = aAlfa % 0101;
            |SI aAlfa ! "&";
               aAlfa = "    Revise la sintaxis del campo (" + &38 + " + tres digitos del codigo ASCII)";
               |MENAV aAlfa;
               |ERROR;
            |SINO;
               aAlfa = #pcegm047#2; |QBF aAlfa;
               aAlfa = aAlfa % 0299;
               nCalc = aAlfa; aAlfa1 = (("000" + nCalc) % -103);
               |SI aAlfa ! aAlfa1;
                  aAlfa = "    Revise la sintaxis del campo (" + &38 + " + tres digitos del codigo ASCII)";
                  |MENAV aAlfa;
                  |ERROR;
               |FINSI;
            |FINSI;
         |FINSI;
      |FINSI;
   |FINSI;
|FPRC;

|PROGRAMA;
   |ABRE #pcegm047;
   |LEE 101#pcegm047.p;
   |SI FSalida ! 0;
      |DDEFECTO #pcegm047;
      |GRABA 020#pcegm047.b;
   |FINSI;

   |CLS;
   |CABEZA " Parametros enlace contable Chile";
   |PINPA #0#0; |PINDA #0#0;
   |ENDATOS #1#0;
   |SI FSalida = 0;
      |GRABA 020#pcegm047.a;
   |FINSI;

   |LIBERA #pcegm047; |CIERRA #pcegm047;
|FPRO;
