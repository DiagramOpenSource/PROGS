|FICHEROS;
     evarm035 #0;   || Este
     evarm036 #2;   || Lineas
     evarw002 #3;   || Tmp  1
     evarw003 #4;   || Tmp  2
     evarm032 #5;   || Desglose Secciones (C)
     evarm033 #6;   ||                    (L)
     evarm040 #7;   || desglose /tallas (L)
     evarm039 #8;   || desglose /tallas (c)
|FIN;

|VARIABLES;
     informe = "eva00005";
     fichero = "";
     num     = 0;
     seccion = 0;
|FIN;

|PROCESO Tmp2;
||     |SI #4#6 ! seccion; |Y seccion ! -1;
     |SI  seccion ! -1;
          |PIEINF;
     |FINSI;
     |PRINT;
     seccion = #4#6;
|FPRC;

|DEFBUCLE BTmp2;
     #4#2;
     ;
     00, "             ";
     99, "zzzzzzzzzzzzz";
     ;
     NULL, Tmp2;
|FIN;

|PROCESO LinSeccion_viejo;
     num = num + 1;
     #4#0 = num;   || Registro
     #4#1 = #5#0;   || Modelo
     #4#2 = #5#1;   || Des
     #4#3 = #3#1;   || Talla
     #4#4 = #6#2;   || Trabajo
     #4#5 = #6#3;   || Tipo
     #4#6 = #6#4;   || Seccion
     #4#7 = #6#5;   || Des
     #4#8 = #6#6 * #3#3;   || Unidades
     |GRABA 021#4n;
|FPRC;

|PROCESO LinSeccion;
     num = num + 1;
     #4#0 = num;   || Registro
     #4#1 = #8#0;   || Modelo
     #4#2 = #8#1;   || Des
     #4#3 = #3#1;   || Talla
     #4#4 = #7#2;   || Trabajo
     #4#5 = #7#3;   || Tipo
     #4#6 = #7#4;   || Seccion
     #4#7 = #7#5;   || Des
     #4#8 = #7#6 * #3#3;   || Unidades
     |GRABA 021#4n;
|FPRC;


|DEFBUCLE BSeccion;
     #8#1;
     ;
     #3#0,#3#1;
     #3#0,#3#1;
     ;
     NULL, NULL, LinSeccion;
|FIN;

|PROCESO Tmp1;
     |BUCLE BSeccion;
|FPRC;

|DEFBUCLE BTmp1;
     #3#1;
     ;
     "             ", "   ";
     "zzzzzzzzzzzzz", "zzz";
     ;
     NULL, Tmp1;
|FIN;

|PROCESO Lineas;
     #3#0 = #2#2;   || Modelo
     #3#1 = #2#4;   || Talla
     |LEE 000#3=;
     |SI FSalida = 0;
          #3#3 = #3#3 + #2#5;   || Cant;
          |GRABA 021#3a;
     |SINO;
          #3#3 = #2#5;   || Cant;
          #3#2 = #2#3;   || Des.
          |GRABA 021#3n;
     |FINSI;
|FPRC;


|PROCESO impre; |TIPO 4;
     |IMPRE #0;
     |SI FSalida = 0;
          |INFOR informe;
          |SI FSalida = 0;
               fichero = "1" + Usuario;
               |NOME_DAT #3 fichero;
               |ABRE #3; |CIERRA #3; |DELINDEX #3;
               fichero = "2" + Usuario;
               |NOME_DAT #4 fichero;
               |ABRE #4; |CIERRA #4; |DELINDEX #4;

               |ABRE #3;
               |BUCLELIN 0Lineas#0;
               |CIERRA #3;
               |ABRE #4;
               |BUCLE BTmp1;
               |CIERRA #4;
               seccion = -1;
               |BUCLE BTmp2;

               |PIEINF;
               |FININF;

               |DELINDEX #3;
               |DELINDEX #4;
          |FINSI;
          |FINIMP;
     |FINSI;
|FPRC;

|PROCESO tipo3; |TIPO 3;
     |CONFI "0000S¨ Desea imprimir la Orden ? ";
     |SI FSalida = 0;
          #0#2 = "S";
          |HAZ impre;
     |FINSI;
|FPRC;
