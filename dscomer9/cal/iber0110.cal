|| *************************************************************************

|PROCESO fechbien; |TIPO 0;   || chequea la fecha
    alfa1 = #0Campo % 102;
    alfa2 = #0Campo % 302;
    dianum = alfa1;
    mesnum = alfa2;
    swbien = 0;
|SI mesnum ] 1; |O mesnum [ 12;
    |HAZ lib_0;
    |SI dianum [ topemes;
            swbien = 1;
    |FINSI;
|FINSI;
|SI swbien = 0;
    |MENAV errorfec1;
    |ERROR;
|FINSI;
|FPRC;

|PROCESO desdefec; |TIPO 0;   || chequea si el desde es mayor al hasta
    nume1 = Campo - 1;
    alfa1 = #0nume1 % 102;    || separa el desde
    alfa2 = #0nume1 % 302;
    diades = alfa1;
    mesdes = alfa2;
    alfa1 = #0Campo % 102;    || separa el hasta
    alfa2 = #0Campo % 302;
    diahas = alfa1;
    meshas = alfa2;
    swbien = 0;
|SI mesdes < meshas;
        swbien = 1;
|FINSI;
|SI mesdes = meshas; |Y diades [ diahas;
        swbien = 1;
|FINSI;
|SI swbien = 0;
    |MENAV errorfec2;
    |ERROR;
|FINSI;
|FPRC;

|PROCESO anyo; |TIPO 0;       || chequea si el a¤o es bisiesto
    nume1 = #0Campo;
|SI nume1 ! 0;|Y nume1 > 1980;
        resto = nume1 $ 4;
    |SI resto = 0;
            bisiesto = 1;
    |SINO;
            bisiesto = 0;
    |FINSI;
|SINO;
    |ERROR;
|FINSI;
|FPRC;

|PROCESO graba; |TIPO 3;      || construye calendario en fichero de trabajo
|SI FSalida ! 7;  || CTRL-C
    |ABRE #1;
        #1#00 = #0#0;   || codigo calendario
        #1#13 = #0#1;   || anyo calendario
    |LEE 140#1=;
    |SI FSalida = 0;   |BORRA 020#1c;   |FINSI;
    |DDEFECTO #1;
        #1#00 = #0#0;   || codigo calendario
        #1#13 = #0#1;   || anyo calendario
    |HAZ firstdia;
    |ATRI P;
    |PINTA 2415, "Confeccionando calendario, espere ...";
    |ATRI 0;
    |HAZ semana;
    |HAZ fechas;
    |HAZ diasfi;
    |GRABA 020#1n;
    |CIERRA #1;
    |BLIN 24;
|FINSI;
|FPRC;

|PROCESO borra; |TIPO 2;  || borra registro en el calendario de trabajo
    swentra = FEntrada / 100;
    swentra = swentra ! 0;
|SI swentra = 3;
    |ABRE #1;
        #1#00 = #0#0;
        #1#13 = #0#1;
    |LEE 140#1=;
    |SI FSalida = 0;
        |BORRA 020#1c;
    |FINSI;
    |CIERRA #1;
|FINSI;
|FPRC;

