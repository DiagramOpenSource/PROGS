|FICHEROS;
    reenlinf #0;
    reenlin1 #1;
|FIN;

|VARIABLES;
    &tecla = 0;
    &programa = 0;
    &numinfor = 0;
    enlace = "";
|FIN;

|PROGRAMA;
    |CLS;
    |CABEZA "Enlace Informes.";
    |PINPA #0#0;
    |ENTLINEAL #1#0, 1, 4, 13, 0, min, max;
    |SI numinfor > 0; |CORRE enlace; |FINSI;
|FPRO;

|PROCESO min;
         #0#0 = 1;
         #0#4 = "N";
|FPRC;

|PROCESO max;
         #0#0 = 999;
         #0#4 = "S";
|FPRC;

|PROCESO linea_prg; |TIPO 7;
         |SI numinfor > 0; |PTEC 806; |FINSI;  ||  Escape;
         tecla = 0;
         |HAZ intro_prg;
|FPRC;

|PROCESO tecla; |TIPO 0;
         tecla = 1;
         programa = #0#0;
         numinfor  = 0;
         enlace   = #0#2 + ".run";
|FPRC;

|PROCESO intro_prg; |TIPO 0;
         |ENTLINEAL #1#1,2,4,20,0,inf,sup;
|FPRC;

|PROCESO inf;
         #1#0 = #0#0;
         #1#1 = 1;
         #1#3 = "S";
|FPRC;

|PROCESO sup;
         #1#0 = #0#0;
         #1#1 = 99;
         #1#3 = "S";
|FPRC;
