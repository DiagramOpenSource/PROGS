|FICHEROS;
     rem01031 #1031;
     rew00731 #731;
|FIN;

|VARIABLES;
      nCampo           = 0;
      nRango           = 0;
      nNumCampos       = 0;
      nGrid            = 0;

      aAlfa            = "";
      aQueQuiero       = "";
      aNumCampos       = "";
      aEsc1            = "";
      aEsc2            = "";
      aRetu            = "";
      aTecla           = "";

     &enEmpresa        = 0;
     &enComplementaria = 0;
     &eaContri         = "";
|FIN;

|PROCESO PintaDatosPantalla;
     |DDEFECTO #731;
     |PARA nCampo = 0;  |SI nCampo [ nNumCampos;  |HACIENDO nCampo = nCampo + 1;
           #731nCampo = #1031nCampo;

           |C_V #731nCampo, 0, aAlfa;
           |SI aAlfa = "S";  |PINTA #731nCampo;  |FINSI;
     |SIGUE;
|FPRC;

|PROCESO Evento1031;
     |SI FSalida = 1;  |O FSalida = 2;
         |LEE 000#1031=;

         |HAZ PintaDatosPantalla;
     |FINSI;
|FPRC;

|PROCESO Baja1031;
     #1031#0 = enEmpresa;
     #1031#1 = enComplementaria;
     #1031#2 = eaContri;
     #1031#3 = 1;
|FPRC;

|PROCESO Alta1031;
     #1031#0 = enEmpresa;
     #1031#1 = enComplementaria;
     #1031#2 = eaContri;
     #1031#3 = 999;
|FPRC;

|PROGRAMA;
     aQueQuiero  = "|NC";
     aNumCampos  = #1031#aQueQuiero#;
     nNumCampos  = aNumCampos;
     nNumCampos  = nNumCampos - 1;
     nRango      = 4 + 8 + 16 + 32 + 128;

     |PINPA #0#731;

     |DDEFECTO #1031;
     |HAZ PintaDatosPantalla;

     |ABRET #1031;

     |LINEAL_SIMPLE #1#1031, nRango, 0602, 1398, Baja1031, Alta1031, Evento1031;
     nGrid = FSalida;

     aEsc1  = &255 + "806";
     aEsc2  = &255 + "807";
     aRetu  = &255 + "802";
     |PARA; |SI;  |HACIENDO;
          FSalida = "::{{001}}Salir," + nGrid;
          |LEETECLA aTecla;
          |SI aTecla = aEsc1; |SAL;  |FINSI;
          |SI aTecla = aEsc2; |SAL;  |FINSI;
          |SI aTecla = aRetu; |SAL;  |FINSI;
     |SIGUE;

     |CIERRAT #1031;
|FPRO;
