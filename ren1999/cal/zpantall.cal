             |SI eaNomDef = "rem01015";  |SUB_EJECUTA_NP "rem00025";  |FINSI;
             |SI eaNomDef = "rem01016";  |SUB_EJECUTA_NP "rem00026";  |FINSI;
             |SI eaNomDef = "rem01017";  |SUB_EJECUTA_NP "rem00026";  |FINSI;
             |SI eaNomDef = "rem01019";  |SUB_EJECUTA_NP "rem00027";  |FINSI;
