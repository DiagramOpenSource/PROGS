|FICHEROS;
    reconcod #0;
    redatcon #1;
    asclient #2;
    reconfac #3;
|FIN;

|VARIABLES;
    putada = "";
    fuera = 0;
    path = "";
|FIN;

|PROGRAMA;
|CLS;
|CABEZA "Codigos Facturacion";
|PINPA #0#0;
|HAZ control;
|SI fuera = 0;
    |ENTLINEAL #1#0, 1, 1, 20, 0, min, max;
|FINSI;
|FPRO;

|CALCULO min;
    #0#0 = 1;
|FCAL;

|CALCULO max;
    #0#0 = 99999;
|FCAL;

|CALCULO control;
    fuera = 0;
|ABRE #3;
|LEE 001#3p;
|SI FSalida = 0;
        putada = #3#0;
    |QBF putada;
    |SI putada = "*";
        |MENAV "    ATENCION!!! Control definido para facturacion directa ...";
            fuera = 1;
    |SINO;
            path = putada;
            putada = #3#1;  putada = "00" + #3#1;  putada = putada % -102;
            path = path + putada + "/";
    |FINSI;
|SINO;
    |MENAV "    ATENCION!!! Control de facturacion sin definir ...";
        fuera = 1;
|FINSI;
|CIERRA #3;
|FCAL;

|CALCULO lee_renta; |TIPO 0;
|ABRE #1;
    #1#0 = #0#0;
|LEE 001#1=;
|SI FSalida ! 0;
    |DDEFECTO #1;
    |MENAV "    ATENCION!!! Contribuyente inexistente ...";
    |ERROR;
|FINSI;
|CIERRA #1;
    #0#1 = #1#1;
|PINTA #0#1;
|FCAL;

|CALCULO lee_facges; |TIPO 0;
|PATH_DAT #2 path;
|ABRE #2;
    #2#0 = #0#2;
|LEE 001#2=;
|SI FSalida ! 0;
        #2#2 = "<INEXISTENTE>";
|FINSI;
|CIERRA #2;
    #0#3 = #2#2;
|PINTA #0#3;
|FCAL;
